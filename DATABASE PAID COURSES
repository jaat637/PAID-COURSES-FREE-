  <script>
    // Tab switching functionality
    function showTab(tab) {
      document.querySelectorAll('.tab').forEach(btn => btn.classList.remove('active'));
      document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
      document.querySelector(`#${tab}`).classList.add('active');
      document.querySelector(`.tab[onclick="showTab('${tab}')"]`).classList.add('active');
    }

    // Username validation
    function validateUsername(input) {
      input.value = input.value.replace(/[^a-zA-Z0-9_]/g, '');
      if (input.value.length < 3) {
        input.style.borderColor = '#dc2626';
      } else {
        input.style.borderColor = '#1e3a8a';
      }
    }

    // Password validation
    function validatePassword(input) {
      if (input.value.length < 6) {
        input.style.borderColor = '#dc2626';
      } else {
        input.style.borderColor = '#1e3a8a';
      }
    }

    // Handle login form submission
    document.getElementById('loginForm').addEventListener('submit', function(e) {
      e.preventDefault();
      // Placeholder for authentication logic
      // In a real application, you'd verify credentials here
      // For demonstration, we'll assume login is successful
      document.getElementById('login').classList.remove('active');
      document.querySelector('.tabs').classList.add('hidden');
      document.getElementById('simDetailsSection').classList.remove('hidden');
    });

    // Handle signup form submission
    document.getElementById('signupForm').addEventListener('submit', function(e) {
      e.preventDefault();
      // Placeholder for signup logic
      // In a real application, you'd save user credentials here
      // For demonstration, we'll assume signup is successful and switch to login tab
      showTab('login');
      alert('Signup successful! Please log in.');
    });

